<?php
	$sql = "SELECT * FROM Shop WHERE item='Sword' ";
	$result = $conn->query($sql);
					
		if($result->num_rows > 0)
		{
		while ($row = $result->fetch_assoc())
			{
				if( $row['VC'] == 'Yes' )
					{
						$theprice = $row['normalprice'] * $_SESSION['percentage'] ;
					}
				else
					{
						$theprice = $row['normalprice'];
					}
								
					
				echo	"
					<tr>
					<td>	$row[normalprice]	</td>
					<td>	$theprice		</td>
					</tr>
					";
			}
		}	
?>
